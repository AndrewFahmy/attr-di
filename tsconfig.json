{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": "./",
    "target": "ES5",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "removeComments": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "lib": ["esnext"],
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
